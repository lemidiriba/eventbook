{% extends 'base.html.twig' %}

{% block title %}Registration!
{% endblock %}

{% block body %}

	<div class="container mt-5">

		<div class="row justify-content-center">
		 {{ form_errors(form) }}

		
			<aside class="col-sm-6 mt-2">

				<div class="card">
					<article class="card-body">
						<a href="{{path("app_login")}}" class="float-right btn btn-outline-primary">Sign in</a>
						<h4 class="card-title mb-4 mt-1">Register User</h4>
						<form method="POST">
							<div class="form-group">
								<label>Email</label>
								{{form_widget(form.email)}}
								
							</div>
							<!-- form-group// -->
							<div class="form-group">
								
								{{form_widget(form.password)}}
							</div>
								<a class="float-right" href="#">Forgot?</a>
							<!-- form-group// -->
							<div class="form-group">
								<div class="checkbox">
									<label>
										<input type="checkbox">
										Register
									</label>
								</div>
								<!-- checkbox .// -->
							</div>
							<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
							<!-- form-group// -->
							<div class="form-group">
								<button type="submit" class="btn btn-primary btn-block">
									Login
								</button>
							</div>
							<!-- form-group// -->
						</form>
					</article>
				</div>
				<!-- card.// -->

			</aside>
			<!-- col.// -->

		</div>
		<!-- row.// -->


	</div>
	<!--container end.//-->

{% endblock %}
